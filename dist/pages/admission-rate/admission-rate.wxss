.oneline {
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
view,
scroll-view,
label,
picker {
  box-sizing: border-box;
}
.clearfix:before,
.clearfix:after {
  display: table;
  content: "";
  clear: both;
}
.pull-left {
  float: left;
}
.pull-right {
  float: right;
}
.hidden {
  display: none;
}
.card {
  margin-bottom: 24rpx;
  padding: 56rpx 32rpx;
  background-color: #FFFFFF;
  border-radius: 24rpx;
}
.card .desc {
  font-size: 1rem;
  line-height: 1.5;
  color: #26343F;
}
.radio-group .radio {
  margin-bottom: 16rpx;
  width: 100%;
  height: 92rpx;
  line-height: 92rpx;
  border-radius: 8rpx;
  text-align: center;
  color: #58646E;
  background-color: #E9F0F7;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.radio-group .radio.checked {
  color: #FFFFFF;
  background: #0075FF url('https://bkd-media.smartstudy.com/assets/weapp-rank/radio-checked.png') no-repeat top right / 40rpx 40rpx;
}
.radio-group .radio:last-child {
  margin-bottom: 0;
}
.container {
  padding: 320rpx 16rpx 24rpx;
  background: #0075FF url('https://bkd-media.smartstudy.com/assets/weapp-rank/admission-rate.png') no-repeat top center / 100%;
}
.form {
  display: block;
  padding: 0 24rpx;
  background-color: #FFFFFF;
  border-radius: 24rpx;
}
.form .picker {
  border-bottom: 1px solid #E9ECEE;
}
.form .picker:last-child {
  border-bottom: 0;
}
.form .picker .item {
  border-bottom: 0;
}
.form .item {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 132rpx;
  padding-right: 6px;
  border-bottom: 1px solid #E9ECEE;
}
.form .item:last-child {
  border-bottom: 0;
}
.form .item .text {
  flex: none;
  width: 258rpx;
  color: #949BA1;
}
.form .item .value {
  flex: 1;
  width: 0;
  color: #26343F;
}
.form .item .arrow {
  flex: none;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  width: 30rpx;
}
.form .item .arrow:after {
  display: block;
  content: "";
  width: 24rpx;
  height: 24rpx;
  border-right: 8rpx solid #DDDDDD;
  border-bottom: 8rpx solid #DDDDDD;
  transform: rotate(-45deg);
}
.desc {
  margin-top: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
  font-size: .8125rem;
  line-height: 26rpx;
}
.btn-submit {
  margin-top: 48rpx;
  height: 96rpx;
  border-radius: 48rpx;
  text-align: center;
  color: #FFFFFF;
  line-height: 96rpx;
  font-size: 1.0625rem;
  background-color: #FFBA0D;
}
.footer {
  margin-top: 24rpx;
  display: flex;
  opacity: .5;
  color: #FFFFFF;
  justify-content: space-between;
  align-items: center;
  font-size: .75rem;
  line-height: 24rpx;
}
.footer:before,
.footer:after {
  display: block;
  content: "";
  border-top: 1rpx solid #FFFFFF;
  width: 160rpx;
}
